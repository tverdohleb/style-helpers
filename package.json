{
  "name": "@tverdohleb/style-helpers",
  "version": "0.0.1",
  "description": "Aphrodite helpers",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn compile && yarn lint",
    "compile": "tsc -b",
    "lint": "tslint --project ./tsconfig.json",
    "lint:fix": "yarn lint --fix",
    "clean": "rimraf ./dist",
    "test": "jest",
    "test:coverage": "yarn test --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tverdohleb/style-helpers.git"
  },
  "keywords": [
    "aphrodite",
    "style"
  ],
  "author": "Valeriy Tverdohleb <v@tverdohleb.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tverdohleb/style-helpers/issues"
  },
  "homepage": "https://github.com/tverdohleb/style-helpers#readme",
  "dependencies": {
    "aphrodite": "^2.2.3",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "@types/aphrodite": "^0.5.13",
    "@types/asap": "^2.0.0",
    "@types/jest": "^24.0.9",
    "@types/jsdom": "^12.2.2",
    "@types/tinycolor2": "^1.4.1",
    "asap": "^2.0.6",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-aphrodite-react": "^2.2.0",
    "jsdom": "^13.2.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn compile"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": {
    "nohoist": [
      "**/rxjs",
      "**/lint-staged",
      "**/lint-staged/**"
    ]
  }
}
